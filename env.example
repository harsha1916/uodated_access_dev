# Camera Capture System Configuration
# Copy this file to .env and customize for your environment

# ===========================
# Camera Configuration
# ===========================

# Camera credentials (default: admin/admin)
CAMERA_USERNAME=admin
CAMERA_PASSWORD=admin

# Camera IP addresses
CAMERA_1_IP=192.168.1.201
CAMERA_2_IP=192.168.1.202
CAMERA_3_IP=192.168.1.203

# Custom RTSP URLs (optional - leave empty to use default format)
# If specified, these override the auto-generated URLs from IP/credentials
CAMERA_1_RTSP=
CAMERA_2_RTSP=
CAMERA_3_RTSP=

# Enable/Disable individual cameras
CAMERA_1_ENABLED=true
CAMERA_2_ENABLED=true
CAMERA_3_ENABLED=true

# ===========================
# S3 Upload Configuration
# ===========================

# S3-compatible API endpoint for image upload
S3_API_URL=https://api.easyparkai.com/api/Common/Upload?modulename=anpr

# Upload settings
UPLOAD_ENABLED=true
BACKGROUND_UPLOAD=true
UPLOAD_QUEUE_SIZE=100

# Offline mode and retry settings
# When internet is unavailable, images are saved to pending_uploads.json
# and automatically uploaded when connection is restored
OFFLINE_RETRY_INTERVAL=60
CONNECTIVITY_CHECK_INTERVAL=60

# ===========================
# GPIO Configuration
# ===========================

# Enable GPIO functionality (requires Raspberry Pi with RPi.GPIO)
GPIO_ENABLED=false

# Enable GPIO triggering (set to false to disable automatic capture on trigger)
GPIO_TRIGGER_ENABLED=true

# GPIO pin numbers (BCM numbering)
# Camera 1 (r1/entry)
GPIO_CAMERA_1_PIN=18

# Camera 2 (r2/exit)
GPIO_CAMERA_2_PIN=19

# Camera 3 (r3/auxiliary)
GPIO_CAMERA_3_PIN=20

# GPIO debounce time in milliseconds
GPIO_BOUNCE_TIME=300

# ===========================
# Network Configuration
# ===========================

# Retry configuration for camera connection
MAX_RETRIES=5
RETRY_DELAY=5

# Web server binding
BIND_IP=192.168.1.33
BIND_PORT=9000

# ===========================
# Storage Configuration
# ===========================

# Image storage path
IMAGE_STORAGE_PATH=images

# Image retention period in days
IMAGE_RETENTION_DAYS=120

# Cleanup interval in hours
CLEANUP_INTERVAL_HOURS=24

# ===========================
# Web Authentication
# ===========================

# Enable web interface authentication (recommended)
WEB_AUTH_ENABLED=true

# Password hash (bcrypt)
# Run: python setup_password.py to generate
# Default password: admin123
PASSWORD_HASH=

# Flask secret key for sessions (random string)
# Change this to a random value in production
SECRET_KEY=change-this-secret-key-in-production


# ===========================
# GPIO Configuration
# ===========================
# GPIO pins for your two buttons (BCM numbering)
BTN1_GPIO=18
BTN2_GPIO=19

# ===========================
# Camera Configuration
# ===========================
# Enable/Disable cameras
CAM1_ENABLED=true
CAM2_ENABLED=true

# RTSP URLs (TCP recommended for reliability)
CAM1_RTSP=rtsp://admin:admin@192.168.1.201:554/avstream/channel=1/stream=0.sdp
CAM2_RTSP=rtsp://admin:admin@192.168.1.202:554/avstream/channel=1/stream=0.sdp

# Camera credentials (for auto-generating RTSP URLs if needed)
CAM_USERNAME=admin
CAM_PASSWORD=admin
CAM1_IP=192.168.1.201
CAM2_IP=192.168.1.202

# ===========================
# Storage Configuration
# ===========================
# Save directory (will be created)
MEDIA_DIR=/home/maxpark

# Retention in days
RETENTION_DAYS=120

# ===========================
# Flask Web Server
# ===========================
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
FLASK_DEBUG=0

# Web Authentication
WEB_AUTH_ENABLED=true
# Password: admin123
WEB_PASSWORD_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5GyYqYT5RQl8G
SECRET_KEY=change-this-secret-key-in-production

# ===========================
# Upload Configuration
# ===========================
UPLOAD_MODE=POST
UPLOAD_ENDPOINT=https://api.easyparkai.com/api/Common/Upload?modulename=anpr
UPLOAD_AUTH_BEARER=
# Multer expects specific field name - try these in order: file, image, upload, photo
UPLOAD_FIELD_NAME=file
UPLOAD_ENABLED=true

# Offline mode settings
OFFLINE_RETRY_INTERVAL=60
CONNECTIVITY_CHECK_INTERVAL=60
